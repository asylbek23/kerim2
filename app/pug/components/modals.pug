mixin modals()
	+b.modal
		#myModal.hystmodal(aria-hidden="true")
			.hystmodal__wrap
				.hystmodal__window(role='dialog', aria-modal='true')
					+b.FORM.modal
						+b.hystmodal__close(data-hystclose='')
							span
							p Закрыть
						+e.container
							+e.header Заказать
								span звонок
							+e.text Оставьте свои данные и с вами  обязательно свяжутся
							+e.inputs
								input(type="text" name="name" placeholder="Ваше имя")
								input(type="text" name="phone" placeholder="+7 (ХХХ) -ХХХ-ХХ-ХХ")
							+e.checkbox
								input(type="checkbox").checkbox
								label Я даю согласие на обработку персональных данных.
							+e.btn
								+b.BUTTON.btn Отправить